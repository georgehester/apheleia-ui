{
    "compilerOptions": {
        "target": "ES6",
        "module": "AMD",
        "lib": [
            "DOM"
        ],
        "outFile": "./build/js/apheleia.js",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "sourceMap": true,
        "declarationMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "classic",
        "allowUnreachableCode": false
    },
    "include": [
        "./src/**/*.ts"
    ]
}