{
    "compilerOptions": {
        "target": "es6",
        //"module": "None",
        "lib": [
            "dom"
        ],
        "outFile": "./build/apheleia/build.js",
        //"outDir": "./build/apheleia",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        //"noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        //"moduleResolution": "classic",
        "allowUnreachableCode": false,
    },
    "include": [
        "./src/**/*.ts"
    ]
}